*{box-sizing:border-box}html{line-height:1.6}body{margin:0;font-family:Garamond,Georgia,times new roman,Times,serif;background:#f7f2fa;color:#675a6e}h1,h2,h3,h4,h5,h6{color:#70426e;font-family:Garamond,Georgia,times new roman,Times,serif}a{color:#70426e;transition:color .35s;text-decoration:none}a:hover{color:#c3a5d4}code{font-family:monospace,monospace;font-size:1em;color:rgba(228,211,237,.8)}pre{overflow:auto}pre code{font-size:.8em}::selection{background:rgba(228,211,237,.25)}::-moz-selection{background:rgba(228,211,237,.25)}.app-header{padding:1.5em;background:#e4d3ed;text-align:center}.app-header h1{font-size:26px;margin:0}.app-header p a{color:#70426e;font-weight:700}.app-header p a:hover{color:#c3a5d4}.app-header-avatar{max-width:9rem;max-height:9rem;border-radius:100%;border:.3rem outset #c3a5d4}.app-header-avatar:hover{border:.4rem outset #c3a5d4}.app-container{padding:2.5rem}.app-header-social{font-size:2em}.app-header-social a{color:#c3a5d4;margin:0 .1em}.app-header-social a:hover{color:#f7f2fa}@media(min-width:940px){.app-header{position:fixed;top:0;left:0;width:20rem;min-height:100vh}.app-container{max-width:65rem;margin-left:20rem}}.error-404{text-align:center}.error-404-title{text-transform:uppercase}.icon{display:block-inline;width:1em;height:1em;vertical-align:-.125em}.pagination{display:block;list-style:none;padding:0;font-size:.8em;text-align:center;margin:3em 0}.page-item{display:inline-block}.page-item .page-link{display:block;padding:.285em .8em}.page-item.active .page-link{color:#f7f2fa;border-radius:2em;background:#c3a5d4}.post-title{color:#70426e}.post-content pre{border-left:.4em solid rgba(195,165,212,.8);padding-left:1em}.post-meta{font-size:.8em}.posts-list{padding:0}.posts-list-item{list-style:none;padding:.4em 0}.posts-list-item:not(:last-child){border-bottom:1px dashed rgba(255,255,255,.3)}.posts-list-item-description{display:block;font-size:.8em}.tag{display:inline-block;margin-right:.2em;padding:0 .6em;font-size:.9em;border-radius:.2em;white-space:nowrap;background:rgba(255,255,255,.1);transition:color .35s,background .35s}.tag:hover{transition:color .25s,background .05s;background:rgba(255,255,255,.3)}.micropost-list{padding-inline-start:0}.micropost-list a{color:#70426e}.micropost-list-item{list-style:none;padding:1em;border-radius:30px 30px 0 30px;border:.3rem solid #f7f2fa;background:#e4d3ed;font-family:sans-serif}.micropost-list-item .author-block{display:flex;align-items:center;margin:-1.6em 0 0 -1.6em}.micropost-list-item .avatar{margin:.3em;max-width:3rem;max-height:3rem;border-radius:100%;border:.2rem solid #c3a5d4}.micropost-list-item h1{font-family:tahoma,sans-serif;font-weight:400;margin-block-start:0;margin-block-end:0;font-size:1.3em}.micropost-list-item p{font-family:verdana,sans-serif;margin-block-start:.8em;margin-block-end:1.2em;padding-left:1em}